<div class="events-map-container">
  <p>
    <b>Name:</b>
    <%= @event.name %>
  </p>

  <p>
    <b>Description:</b>
    <%= @event.description %>
  </p>

  <p>
    <b>Event date:</b>
    <%= @event.event_date %>
  </p>

  <p>
    <b>Event time:</b>
    <%= @event.event_time %>
  </p>

  <p>
    <b>Scope:</b>
    <%= @event.scope %>
  </p>

  <p>
    <b>Attendence required:</b>
    <%= @event.attendence_required %>
  </p>

  <p>
    <b>Attending:</b>
    <%= @event.attending %>
  </p>

  <p>
    <b>Venue:</b>
    <%= @event.venue %>
  </p>

  <p>
    <b>Address line 1:</b>
    <%= @event.address_line_1 %>
  </p>

  <p>
    <b>Address line 2:</b>
    <%= @event.address_line_2 %>
  </p>

  <p>
    <b>City:</b>
    <%= @event.city %>
  </p>

  <p>
    <b>Postcode:</b>
    <%= @event.postcode %>
  </p>

  <p>
    <b>Phone:</b>
    <%= @event.phone %>
  </p>
  <%= link_to 'Edit', edit_event_path(@event) %> |
  <%= link_to 'Back', events_path %>
</div>

<div class="index-div">
  <section class="left">
    <div class="weather-api">
      Temperature in London: {{ weatherData }} degrees celsius
    </div>
    <div id="text-messaging-area">
      Text Messaging area
      <h2>Send a text message !</h2>
      <%= form_tag("/messages", method: "post") do %>
        <%= hidden_field :event_id, :value => @event.id %>
        <%#= hidden_field :user_id, :value =>@user.id %>
        <%= label_tag(:content, "Message:") %>
        <%= text_field_tag(:content )%>
        <%= submit_tag("Send Message") %>
      <% end %>
    </div>
  </section>
  <div id="event-goers">
    <% @event.users.each do |user|%>
      <br>
      <%= user.name %>
      <%= image_tag(user.image) %>
      <br>
    <% end %>
  </div>
</div>