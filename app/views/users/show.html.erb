<div id="user-page-main-container">
  <div id="left1">
    <div id="main-profile-pic">
      <%= image_tag(@user.image) %>
    </div>
    <h1><%= @user.name %></h1>
    <table>
      <tr>
        <td>
          <a href="<%= @user.facebook %>"><img src="http://uxrepo.com/static/icon-sets/brandico/svg/facebook-rect.svg" alt="" height="50" width="50"></a>
        </td>
        <td>
          <a href="<%= @user.github %>"><img src="http://www.jessesinfield.com/wp-content/themes/portfolioSite/images/github.png" alt="" height="54" width="54"></a>
        </td>
        <td>
          <a href="<%= @user.twitter %>"><img src="http://uxrepo.com/static/icon-sets/font-awesome/svg/twitter-squared.svg" alt="" height="58" width="58"></a>
        </td>
      </tr>
      <tr>
        <td>
          <a href="<%= @user.linkedin %>"><img src="http://uxrepo.com/static/icon-sets/mfg-labs/svg/linkedin.svg" alt="" height="54" width="54  "></a>
        </td>
        <td>
          <a href="<%= @user.personal_website %>"><img src="https://cdn1.iconfinder.com/data/icons/windows-8-metro-style/512/globe.png" alt="" height="54" width="54"></a>
        </td>
        <td>
          <a href="<%= @user.email %>"><img src="https://cdn4.iconfinder.com/data/icons/aiga-symbol-signs/612/aiga_mail_bg-512.png" alt="" height="54" width="54  "></a>
        </td>
      </tr>
    </table>
  </div>
  <div id="middle1">
    Introduction to the event
  </div>
  <div id="right1">
    Past Events Pictures Carousell here.
    <div style="height: 305px">
      <carousel interval="myInterval">
        <slide ng-repeat="slide in slides" active="slide.active">
          <img ng-src="{{slide.image}}" style="margin:auto;">
          <div class="carousel-caption">
            <h4>Slide {{$index}}</h4>
            <p>{{slide.text}}</p>
          </div>
        </slide>
      </carousel>
    </div>
    <div class="row">
      <div class="col-md-6">
        <button type="button" class="btn btn-info" ng-click="addSlide()">Add Slide</button>
      </div>
      <div class="col-md-6">
        Interval, in milliseconds: <input type="number" class="form-control" ng-model="myInterval">
        <br />Enter a negative number to stop the interval.
      </div>
    </div>
  </div>
</div>

<div id="user-upcoming-events">
  <div class="weather-api">
    Temperature in London: {{ weatherData }} degrees celsius
  </div>
  <div id="upcoming-eventsx2">
    Sample of upcoming events.
  </div>
</div>





